<section id ="warehouses">
    <h2>Galpões<h2>
    
    <div id="new-warehouse">
      <%= link_to "Cadastrar Galpão", new_warehouse_path %>
    </div>
    
    <div id="warehouses-list">
    <% @warehouses.each do |w| %>
        <h3><%= link_to(w.name, warehouse_path(w.id))%></h3>
          <dl>
            <dt>Código:</dt>
            <dd><%= w.code %></dd>
            <dt>Cidade:</dt>
            <dd> <%= w.city %></dd>
            <dt>Área:</dt>
            <dd><%= w.area %> m2</dd>
          </dl>
        <% end %>
    </div>

    <% if @warehouses.empty? %>
        <h3>Não existem galpões cadastrados<h3>
    <% end %>
    
</section>
